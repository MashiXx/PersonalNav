<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Personal NAV</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <h1 class="page-title"><%= t('reports.title') %></h1>

        <div class="nav-summary">
            <div class="nav-card">
                <h3><%= t('reports.currentNAV') %></h3>
                <p class="nav-value"><%= formatCurrency(currentNAV.netAssetValue) %></p>
            </div>
        </div>

        <div class="reports-section">
            <h2><%= t('reports.monthlyHistory') %> (<%= selectedYear %>)</h2>
            <canvas id="monthlyChart"></canvas>
        </div>

        <div class="reports-section">
            <h2><%= t('reports.yearlyHistory') %></h2>
            <canvas id="yearlyChart"></canvas>
        </div>

        <div class="reports-section">
            <h2><%= t('reports.assetGroupAllocation') %></h2>
            <canvas id="assetGroupChart"></canvas>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        var dateLocale = '<%= locale === "vi" ? "vi-VN" : "en-US" %>';

        // Monthly NAV Chart
        const monthlyData = <%- JSON.stringify(monthlySnapshots) %>;
        const monthlyLabels = monthlyData.map(s => new Date(s.snapshotDate).toLocaleDateString(dateLocale));
        const monthlyValues = monthlyData.map(s => s.netAssetValue);

        new Chart(document.getElementById('monthlyChart'), {
            type: 'line',
            data: {
                labels: monthlyLabels,
                datasets: [{
                    label: '<%= t("reports.navByMonth") %>',
                    data: monthlyValues,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            }
        });

        // Yearly NAV Chart
        const yearlyData = <%- JSON.stringify(yearlySnapshots) %>;
        const yearlyLabels = yearlyData.map(s => new Date(s.snapshotDate).getFullYear());
        const yearlyValues = yearlyData.map(s => s.netAssetValue);

        new Chart(document.getElementById('yearlyChart'), {
            type: 'bar',
            data: {
                labels: yearlyLabels,
                datasets: [{
                    label: '<%= t("reports.navByYear") %>',
                    data: yearlyValues,
                    backgroundColor: 'rgb(54, 162, 235)'
                }]
            }
        });

        // Asset Group Pie Chart
        const breakdown = <%- JSON.stringify(currentNAV.breakdown) %>;
        const groupLabels = breakdown.assetGroups.map(g => g.name);
        const groupValues = breakdown.assetGroups.map(g => g.totalValue);

        new Chart(document.getElementById('assetGroupChart'), {
            type: 'pie',
            data: {
                labels: groupLabels,
                datasets: [{
                    data: groupValues,
                    backgroundColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(153, 102, 255)'
                    ]
                }]
            }
        });
    </script>
</body>
</html>
