<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Personal NAV</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <%- include('../partials/flash') %>

        <h1 class="page-title"><%= t('assets.addNew') %></h1>

        <form action="/assets" method="POST" class="form">
            <div class="form-group">
                <label for="assetGroupId"><%= t('assets.assetGroupRequired') %></label>
                <select id="assetGroupId" name="assetGroupId" required class="form-control">
                    <option value=""><%= t('assets.selectGroup') %></option>
                    <% assetGroups.forEach(group => { %>
                        <option value="<%= group.id %>" data-type="<%= group.type %>"><%= group.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="name"><%= t('assets.assetNameRequired') %></label>
                <input type="text" id="name" name="name" required class="form-control">
            </div>

            <div class="form-group">
                <label for="description"><%= t('common.description') %></label>
                <textarea id="description" name="description" rows="4" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="currentValue"><%= t('assets.currentValueRequired') %></label>
                <input type="number" id="currentValue" name="currentValue" step="0.01" required class="form-control">
            </div>

            <div class="form-group">
                <label for="quantity"><%= t('assets.quantityRequired') %></label>
                <input type="number" id="quantity" name="quantity" step="0.01" value="1" required class="form-control">
            </div>

            <div class="form-group" id="tokenSelectGroup" style="display: none;">
                <label for="coinGeckoId"><%= t('assets.selectToken') %></label>
                <select id="coinGeckoId" name="coinGeckoId" class="form-control">
                    <option value=""><%= t('assets.selectTokenPlaceholder') %></option>
                    <% cryptoTokens.forEach(token => { %>
                        <option value="<%= token.id %>"><%= token.symbol %> - <%= token.name %></option>
                    <% }) %>
                </select>
                <small class="form-text"><%= t('assets.tokenHint') %></small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><%= t('assets.addAsset') %></button>
                <a href="/assets" class="btn btn-secondary"><%= t('common.cancel') %></a>
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var groupSelect = document.getElementById('assetGroupId');
            var tokenGroup = document.getElementById('tokenSelectGroup');

            function toggleTokenSelect() {
                var selectedOption = groupSelect.options[groupSelect.selectedIndex];
                var groupType = selectedOption ? selectedOption.getAttribute('data-type') : '';
                tokenGroup.style.display = groupType === 'crypto' ? 'block' : 'none';
            }

            groupSelect.addEventListener('change', toggleTokenSelect);
            toggleTokenSelect();
        });
    </script>
</body>
</html>
