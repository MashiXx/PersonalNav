<!DOCTYPE html>
<html lang="<%= typeof locale !== 'undefined' ? locale : 'vi' %>" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Personal NAV</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <script src="/js/main.js"></script>
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title"><%= t('auth.login') %></h1>

            <%- include('../partials/flash') %>

            <form action="/auth/login" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="username"><%= t('auth.username') %></label>
                    <input type="text" id="username" name="username" required class="form-control">
                </div>

                <div class="form-group">
                    <label for="password"><%= t('auth.password') %></label>
                    <input type="password" id="password" name="password" required class="form-control">
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="rememberMe" name="rememberMe" value="true">
                        <span><%= t('auth.rememberMe') %></span>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-block"><%= t('auth.login') %></button>
            </form>

            <% if (typeof allowRegistration === 'undefined' || allowRegistration) { %>
            <p class="auth-footer">
                <%= t('auth.noAccount') %> <a href="/auth/register"><%= t('auth.registerNow') %></a>
            </p>
            <% } %>
        </div>
    </div>
</body>
</html>
