<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Personal NAV</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <%- include('../partials/flash') %>

        <h1 class="page-title"><%= t('assetGroups.createTitle') %></h1>

        <form action="/asset-groups" method="POST" class="form">
            <div class="form-group">
                <label for="name"><%= t('assetGroups.groupNameRequired') %></label>
                <input type="text" id="name" name="name" required class="form-control">
            </div>

            <div class="form-group">
                <label for="type"><%= t('assetGroups.typeRequired') %></label>
                <select id="type" name="type" required class="form-control">
                    <option value="real_estate"><%= t('assetGroups.typeRealEstate') %></option>
                    <option value="savings"><%= t('assetGroups.typeSavings') %></option>
                    <option value="stocks"><%= t('assetGroups.typeStocks') %></option>
                    <option value="crypto"><%= t('assetGroups.typeCrypto') %></option>
                    <option value="other"><%= t('assetGroups.typeOther') %></option>
                </select>
            </div>

            <div class="form-group">
                <label for="currency"><%= t('common.currencyUnit') %></label>
                <select id="currency" name="currency" required class="form-control">
                    <% currencies.forEach(function(c) { %>
                        <option value="<%= c.code %>"><%= c.code %> (<%= c.symbol %>)</option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label><%= t('common.icon') %></label>
                <div class="icon-grid">
                    <% defaultIcons.forEach(function(ic) { %>
                        <label class="icon-option">
                            <input type="radio" name="icon" value="<%= ic.file %>" <%= ic.key === 'other' ? 'checked' : '' %>>
                            <span class="icon-option-inner">
                                <img src="/images/icons/<%= ic.file %>" alt="<%= t(ic.label) %>">
                                <span class="icon-label"><%= t(ic.label) %></span>
                            </span>
                        </label>
                    <% }) %>
                </div>
            </div>

            <div class="form-group">
                <label for="description"><%= t('common.description') %></label>
                <textarea id="description" name="description" rows="4" class="form-control"></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><%= t('assetGroups.createGroup') %></button>
                <a href="/asset-groups" class="btn btn-secondary"><%= t('common.cancel') %></a>
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
